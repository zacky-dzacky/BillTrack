<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    android:padding="16dp"
    tools:context=".ui.spending.SpendingFragment">

    <!-- Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amountInputLayout"
        style="@style/Widget.App.TextInputLayout.LogExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/log_expense_hint_amount"
        app:startIconDrawable="@drawable/ic_log_expense_amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/log_expense_input_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dateInputLayout"
        style="@style/Widget.App.TextInputLayout.LogExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/log_expense_hint_date"
        app:startIconDrawable="@drawable/ic_log_expense_date"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_log_expense_date" 
        app:endIconContentDescription="Select date"
        app:layout_constraintTop_toBottomOf="@id/amountInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false" 
            android:clickable="true"
            android:textColor="@color/log_expense_input_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/descriptionInputLayout"
        style="@style/Widget.App.TextInputLayout.LogExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/log_expense_hint_description"
        app:startIconDrawable="@drawable/ic_log_expense_description"
        app:layout_constraintTop_toBottomOf="@id/dateInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:textColor="@color/log_expense_input_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category Selector -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/categorySpinnerLayout"
        style="@style/Widget.App.TextInputLayout.LogExpense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/log_expense_hint_select_category"
        app:startIconDrawable="@drawable/ic_log_expense_category"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/log_expense_dropdown_arrow_color"
        app:layout_constraintTop_toBottomOf="@id/descriptionInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <AutoCompleteTextView
            android:id="@+id/categoryAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/log_expense_input_text_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Add New Category Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addNewCategoryButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/log_expense_button_add_category"
        android:textColor="@color/log_expense_add_category_button_text_color"
        app:icon="@drawable/ic_log_expense_add_circle"
        app:iconTint="@color/log_expense_add_category_button_text_color"
        app:strokeColor="@color/log_expense_add_category_button_stroke_color"
        app:cornerRadius="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/categorySpinnerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="OR"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/addNewCategoryButton"
        tools:layout_editor_absoluteX="16dp" />
    <!-- Capture Bill Image Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/captureBillImageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/log_expense_button_capture_bill"
        android:textColor="@color/white"
        app:backgroundTint="@color/log_expense_capture_button_background"
        app:cornerRadius="8dp"
        app:icon="@drawable/ic_log_expense_scan_bill"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
