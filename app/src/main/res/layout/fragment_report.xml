<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_background"
    android:fillViewport="true"
    tools:context=".ui.report.ReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Toggle Buttons: Categories, Time, Merchants -->
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/reportTypeToggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/report_filter_button_bg" 
            app:checkedButton="@id/categoriesToggleButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/categoriesToggleButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_tab_categories"
                android:textAllCaps="false"
                android:textColor="@color/report_toggle_text_color_selector"
                app:backgroundTint="@android:color/transparent" 
                app:strokeWidth="0dp" 
                android:background="@drawable/report_toggle_button_selected_bg"/>

            <Button
                android:id="@+id/timeToggleButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_tab_time"
                android:textAllCaps="false"
                android:textColor="@color/report_toggle_text_color_selector"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="0dp"
                android:background="@drawable/report_toggle_button_unselected_bg" />

            <Button
                android:id="@+id/merchantsToggleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_tab_merchants"
                android:textAllCaps="false"
                android:textColor="@color/report_toggle_text_color_selector"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="0dp"
                android:background="@drawable/report_toggle_button_unselected_bg" />

        </LinearLayout>

        <!-- Spending by Category Title -->
        <TextView
            android:id="@+id/spendingByCategoryTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/report_spending_by_category_title"
            android:textColor="@color/dashboard_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reportTypeToggleGroup" />

        <!-- Total Spending Amount -->
        <TextView
            android:id="@+id/totalSpendingAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/report_example_total_spending"
            android:textColor="@color/dashboard_text_primary"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spendingByCategoryTitleTextView" />

        <!-- Spending Period -->
        <TextView
            android:id="@+id/spendingPeriodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/report_spending_period"
            android:textColor="@color/dashboard_text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/totalSpendingAmountTextView" />

        <!-- Category Labels ScrollView -->
        <HorizontalScrollView
            android:id="@+id/categoryLabelsScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/spendingPeriodTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/categoryLabelsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/DashboardCategoryLabel" 
                    android:text="@string/dashboard_category_food"/>
                <TextView
                    style="@style/DashboardCategoryLabel"
                    android:text="@string/dashboard_category_transport"/>
                <TextView
                    style="@style/DashboardCategoryLabel"
                    android:text="@string/dashboard_category_entertain"/>
                <TextView
                    style="@style/DashboardCategoryLabel"
                    android:text="@string/dashboard_category_utilities"/>
                <TextView
                    style="@style/DashboardCategoryLabel"
                    android:text="@string/dashboard_category_shopping"/>
                <!-- Add more categories as needed -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Filter Buttons -->
        <LinearLayout
            android:id="@+id/filterButtonsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/categoryLabelsScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/categoryFilterButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_filter_category_label"
                android:textColor="@color/dashboard_text_secondary"
                android:background="@drawable/report_filter_button_bg"
                app:icon="@drawable/ic_dropdown_arrow"
                app:iconGravity="end"
                app:iconTint="@color/dashboard_text_secondary"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/dateRangeFilterButton"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report_filter_date_range_label"
                android:textColor="@color/dashboard_text_secondary"
                android:background="@drawable/report_filter_button_bg"
                app:icon="@drawable/ic_dropdown_arrow"
                app:iconGravity="end"
                app:iconTint="@color/dashboard_text_secondary"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Placeholder for Chart/Report Content -->
        <FrameLayout
            android:id="@+id/reportContentPlaceholder"
            android:layout_width="0dp"
            android:layout_height="200dp" 
            android:layout_marginTop="24dp"
            android:background="#E0E0E0" 
            app:layout_constraintTop_toBottomOf="@id/filterButtonsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Report Content (e.g., Chart) Here"
                android:textColor="@color/dashboard_text_secondary"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
