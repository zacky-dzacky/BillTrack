<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5" 
    tools:context=".BillCaptureActivity"
    android:paddingVertical="24dp">

    <TextView
        android:id="@+id/title_add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add expense" 
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/camera_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_add_expense"
        app:layout_constraintBottom_toTopOf="@id/text_extraction_area_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/bill_preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/captured_bill_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <!-- Corner Guides -->
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="#8A2BE2"
            android:layout_gravity="top|start" />
        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="#8A2BE2"
            android:layout_gravity="top|start"/>

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="#8A2BE2"
            android:layout_gravity="top|end" />
        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="#8A2BE2"
            android:layout_gravity="top|end"/>
        
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="#8A2BE2"
            android:layout_gravity="bottom|start" />
        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="#8A2BE2"
            android:layout_gravity="bottom|start"/>

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="#8A2BE2"
            android:layout_gravity="bottom|end" />
        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="#8A2BE2"
            android:layout_gravity="bottom|end"/>

    </FrameLayout>
    
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_extraction_area_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>

    <!-- Extracted Text Area (Initially hidden, appears after capture) -->
    <ScrollView
        android:id="@+id/extracted_bill_text_scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="2dp"
        android:visibility="gone" 
        app:layout_constraintTop_toBottomOf="@id/camera_image_container"
        app:layout_constraintBottom_toTopOf="@id/capture_bill_button" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/extracted_bill_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Extracted bill text will appear here...\nItem 1: $10.00\nItem 2: $12.99\nTotal: $22.99"/>
    </ScrollView>

    <!-- Initial Capture Button -->
    <Button
        android:id="@+id/capture_bill_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Capture Bill"
        android:background="@drawable/drawable_button_upload_background"
        android:textColor="@android:color/white"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <!-- Buttons shown after capture -->
    <LinearLayout
        android:id="@+id/post_capture_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <Button
            android:id="@+id/add_note_button" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Note"
            android:background="@drawable/drawable_button_add_note_background"
            android:textColor="#8A2BE2"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/upload_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload"
            android:background="@drawable/drawable_button_upload_background"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Retake button (could be overlaid or part of the post_capture_buttons_layout if design allows) -->
    <ImageButton
        android:id="@+id/retake_bill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert" 
        app:tint="@android:color/black"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@id/camera_image_container"
        app:layout_constraintTop_toTopOf="@id/camera_image_container"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:contentDescription="Retake Photo"/>

</androidx.constraintlayout.widget.ConstraintLayout>
